@page
@using TirdaadSchool.DataLayer.Entities.User
@model TirdaadSchool.Web.Pages.Admin.Users.NewUserModel
@{
    ViewData["Title"] = "افزودن کاربر جدید";
    List<Role> roles = ViewData["Roles"] as List<Role>;
}

  <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">افزودن کاربر جدید</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">

   <form method="post" enctype="multipart/form-data">

       
        <div class="col-md-8">
                 <div class="panel panel-primary">
                        <div class="panel-heading">
                            اطلاعات کاربر
                        </div>
                        <div class="panel-body">

                           <div class="form-group">
                            <label>نام کاربری</label>
                              <input type="text" asp-for=NewUserViewModel.UserName class="form-control">
                          
                              </div>

                              <div class="form-group">
                            <label>ایمیل</label>
                              <input type="email" asp-for=NewUserViewModel.Email class="form-control">
                           
                              </div>
                            <div class="form-group">
                                <label>رمز عبور</label>
                                <input type="text" asp-for=NewUserViewModel.Password class="form-control">
                            
                            </div>
                            <div>
                                <hr/>
                                <label >انتخاب نقش کاربر</label>
                            
                                @foreach (var item in roles)
                                {
                                    <div class="checkbox">
                                        <label>
                                            <input  type="checkbox" name="SelectedRoles" value="@item.RoleId"/>
                                            @item.RoleName
                                        </label>

                                    </div>
                                }
                            </div>
                        </div>

                        <div class="panel-footer">
                         <input type="submit" class="btn btn-success" value="ساخت کاربر جدید"/>
                        </div>
                    </div>
        </div>
        <div class="col-md-4">

                <div class="panel panel-primary">
                        <div class="panel-heading">
                            تصویر پروفایل
                        </div>
                        <div class="panel-body">
                           <img id="imgup" class="thumbnail" src="/UserAvatar/Default.jpg" >

                           <div class="form-group">
                                            <label>انتخاب تصویر</label>
                                            <input  type="file" asp-for=NewUserViewModel.AvatarFile >
                                        </div>
                        </div>
                        <div class="panel-footer">
                            Panel Footer
                        </div>
                    </div>
                      
        </div>
   </form>
    </div>
    @section Scripts{

        function readURL(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    reader.onload = function(e) {
      $('#imgup').attr('src', e.target.result);
    }
    reader.readAsDataURL(input.files[0]);
  } 
}

$("#NewUserViewModel_AvatarFile").change(function() {
  readURL(this);
});

    }