@model TirdaadSchool.Core.DTOs.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">آموزشگاه تیرداد</a></li>
        <li class="breadcrumb-item active" aria-current="page">ثبت نام</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">

        <header><h2> ثبت نام </h2></header>

        <div class="form-layer">

            <form asp-action="Register" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="name"><i class="zmdi zmdi-account"></i></span>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری" aria-describedby="email-address">
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="Repassword"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="RePassword" class="text-danger"></span>



                <div class="link">

                    <a href="/Login"> <i class="zmdi zmdi-account"></i> ورود به سایت </a>
                </div>
                @*<div asp-validation-summary="All" class="text-danger">   </div>*@
                <button type="submit" class="btn btn-success"> ثبت نام </button>

            </form>
        </div>

    </div>
</main>
